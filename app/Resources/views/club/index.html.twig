{% extends "OCPlatformBundle::layout.html.twig" %}

{% block body %}
    <h1>Clubs list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Province</th>
                <th>Matricule</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td><a href="{{ path('club_show', { 'id': club.id }) }}">{{ club.id }}</a></td>
                <td>{{ club.name }}</td>
                <td>{{ club.province }}</td>
                <td>{{ club.matricule }}</td>
                <td>
                <td>
                    <a href="{{ path('club_show', { 'id': club.id }) }}" class="btn btn-primary"><i class="glyphicon glyphicon-eye-open"></i></a>
                    <a href="{{ path('club_edit', { 'id': club.id }) }}" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a href="{{ path('club_edit', { 'id': club.id }) }}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('club_new') }}" class="btn btn-primary">Create   <i class="glyphicon glyphicon-plus"></i> </a>

{% endblock %}
